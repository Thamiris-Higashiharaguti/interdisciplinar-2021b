@using TiroGuerra.Models
@model List<Pelotao>
@{
    ViewBag.Title = "Cadastro Atirador";
}
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Cadastro do Atirador</title>

   <style type="text/css">
     body
     {
       padding-top: 100px;
       
     }
   </style>

  </head>
  <body>
    <div class="container" style="text-align: left;">
        <form>
            <div class="row"> 
                <div class="col-sm-5 offset-sm-4">
                    <h1>Cadastro de Atirador</h1>
                </div>  
            </div>
          

            <div class="row">
                <div class="col-sm-5 offset-sm-1">
                    <label class="form-label">Nome:</label>
                    <input type="text"  class="form-control" name="nome">
                    <div id="CPFhelp" class="form-text">O nome do Atirador</div>
                </div>

                <div class="col-sm-5">
                    <label for="textoCPF" class="form-label">CPF</label>
                    <input type="email" class="form-control" id="cpf" aria-describedby="cpf">
                    <div id="CPFhelp" class="form-text">O CPF será necessário para fazer login</div>
                </div>
            </div>

          <br>

            <div class="row">
                <div class="col-sm-5 offset-sm-1">
                    <label class="form-label">RG</label>
                    <input type="text" class="form-control">
                    <div id="RGhelp" class="form-text">Número do RG do Atirador</div>
                </div>
                
                <div class="col-sm-5">
                    <label class="form-label">RA</label>
                    <input type="text" class="form-control">
                    <div id="RAhelp" class="form-text">Número do RA do Atirador</div>
                </div>
            </div>

            <br>

            <div class="row">
                <div class="col-sm-5 offset-sm-1">
                  <label class="form-label">Formação:</label>
                  <select class="form-select" aria-label="Default select example">
                    <option selected>Selecione uma das formações</option>
                    <option value="1">Atirador</option>
                    <option value="2">Comandante</option>
                    <option value="3">Cabo</option>
                  </select>
                </div>
                
                <div class=" col-sm-5">
                  <label class="form-label">Pelotão:</label>
                  <select class="form-select" aria-label="Default select example">
    
                  </select>
                </div>
            </div>

          <br>

          <div class="row">
            <div class="col-sm-5 offset-sm-1">
              <label class="form-label">Senha:</label>
              <input type="password" class="form-control">
              <div id="Passwordhelp" class="form-text">Senha necessária para o Atirador acessar a plataforma</div>
            </div>
            
            <div class="col-sm-5">
              <label class="form-label">Confirme a Senha:</label>
              <input type="password" class="form-control">
            </div>
          </div>
          <br>
          <div class="row">
            <div class=" col-sm-2 offset-sm-1">
              <input type="submit" class="btn btn-primary form-control" value="Cadastrar">
            </div>
          </div>
    
    </form>
    </div>

    <img src="images/exercito.png">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>