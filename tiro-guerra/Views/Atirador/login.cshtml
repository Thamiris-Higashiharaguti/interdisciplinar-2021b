@using TiroGuerra.Models;
@model List<Atirador>
@{
    ViewBag.Title = "Lista de Atiradores";
}
<!doctype html>
<html lang="en">
  <head >
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Login</title>

   <style type="text/css">
     body
     {
       padding-top: 200px;
     }
   </style>

  </head>
  <body>
    <div class="container" style="text-align: left;">
      
        <form>
          
            <div class="row"> 
              <div class="col-sm-2 offset-sm-5">
                <h1>Login</h1>
              </div>  
            </div>
          

          <div class="row">
            <div class="col-sm-5 offset-sm-3">
              <label for="textoCPF" class="form-label">CPF</label>
              <input type="email" class="form-control" id="cpf" aria-describedby="cpf">
              <div id="CPFhelp" class="form-text">Utilize seu CPF para fazer login</div>
            </div>
          </div>

          <br>

          <div class="row">
            <div class="col-sm-5 offset-sm-3">
              <label for="exampleInputPassword1" class="form-label">Senha</label>
              <input type="password" class="form-control" id="senha">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-sm-5 offset-sm-3">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Lembrar-me</label>
            </div>

          <br>

          <div class="row">
            <div class="col-sm-2 offset-sm-3">
              <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
          </div>
        </form>
        <br>
        <div class="row">
          <div class="col-sm-5 offset-sm-3">
            <a href="/atirador/cadastrarAtirador"> NÃ£o possui cadastro clique aqui</a>
          </div>
        </div>
    </div>
    

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>